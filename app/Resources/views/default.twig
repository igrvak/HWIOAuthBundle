{% extends '::base.twig' %}

{% trans_default_domain "IwinAppBundle" %}

{% block basePage %}
  <div id="wrapper">
    <header id="header" class="header">
      <strong class="logo"><a href="{{ path('home') }}">{{ var.title }}</a></strong>
      <a href="#user_profile" class="account">
				<span class="account__avatar">
					<img src="{{ asset('bundles/iwinapp/img/old/ico01.png') }}" height="17" width="17" alt="">
				</span>
        <span class="account__name"><span>{{ 'user.login'|trans }}</span></span>
      </a>
      <a href="#send_invite" class="btn wide square">{{ 'main.sendinvite'|trans }}</a>
      <nav id="sections">
        {% block topmenu %}
          {{ knp_menu_render('iwin.main') }}
        {% endblock %}
      </nav>
      <div class="bottom-block">
        <a href="#need_help" class="support-link">{{ 'main.needhelp'|trans }}</a>
        <ul class="lang">
          {% for lang in var.langs %}
            <li class="{{ app.request.locale == lang?'active':'' }}"><a href="{{ var.langlinks[lang] }}">{{ lang|upper }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </header>
    <div id="main" class="main">
      <div id="content" class="content">
        {% block globalhook_break_page %}
          {% block body %}
            {% block pageBase %}
              {% block page %}{% endblock %}
            {% endblock %}
          {% endblock %}
        {% endblock %}
      </div>
    </div>
  </div>
  <div class="login-popup" id="login-popup">
    <form action="#" id="login-form">
      <fieldset>
        <div class="input-row">
          <div class="message-tip">Profile photo enhances trust interest to your account</div>
          <input type="text" placeholder="E-mail">
        </div>
        <div class="input-row">
          <input type="password" placeholder="Password">
          <a href="#" class="link-show">Show password</a>
        </div>
        <label class="single-checkbox">
          <input type="checkbox" id="check1">
          <span></span>
        </label>
        <div class="caption inline-caption">
          <label for="check1" class="single-caption">Remember me</label>
        </div>
        <button type="submit" class="btn-small1 wide">Sign in</button>
        <a href="#" class="link-restore">Forgot password?</a>
        <div class="socials">
          <span class="title">Sign in with</span>
          <ul>
            <li><a href="#" class="in" title="Instagram">Instagram</a></li>
            <li><a href="#" class="gp" title="Google+">Google+</a></li>
            <li><a href="#" class="fb" title="Facebook">Facebook</a></li>
            <li><a href="#" class="tw" title="Twitter">Twitter</a></li>
          </ul>
        </div>
        <div class="register">
          <span class="title">Don't have an account?</span>
          <a href="#" class="btn-frame wide white">Sign up for free</a>
        </div>
      </fieldset>
    </form>
    <a href="#" class="close-popup"><span>Cancel</span></a>
  </div>
{% endblock %}