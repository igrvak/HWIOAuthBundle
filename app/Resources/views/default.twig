{% extends '::base.twig' %}

{% trans_default_domain "IwinAppBundle" %}

{% block basePage %}
  <div id="wrapper">
    <header id="header" class="header">
      <strong class="logo"><a href="{{ path('home') }}">{{ var.title }}</a></strong>
      <a href="#user_profile" class="account authorized">
        <span class="account__availability online"></span>
        <span class="account__inbox">0</span>
				<span class="account__avatar">
					<img src="{{ asset('bundles/iwinapp/img/old/img01.jpg') }}" alt="" width="49" height="50">
				</span>
        <span class="account__name"><span>Daniela</span></span>
      </a>
      <a href="#send_invite" class="btn wide square">Send invite</a>
      <nav id="sections">
        {% block topmenu %}
          {{ knp_menu_render('iwin.main') }}
        {% endblock %}
      </nav>
      <div class="bottom-block">
        <a href="#need_help" class="support-link">Need help?</a>
        <ul class="lang">
          {% for lang in var.langs %}
            <li class="{{ app.request.locale == lang?'active':'' }}"><a href="{{ var.langlinks[lang] }}">{{ lang|upper }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </header>
    <div id="main" class="main">
      <div id="content" class="content">
        {% block globalhook_break_page %}
          {% block body %}
            {% block pageBase %}
              {% block page %}{% endblock %}
            {% endblock %}
          {% endblock %}
        {% endblock %}
      </div>
    </div>
  </div>
{% endblock %}