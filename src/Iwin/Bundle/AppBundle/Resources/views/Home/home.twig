{% extends '::page.twig' %}

{% trans_default_domain "IwinAppBundle" %}

{% block title %}
  Create Free
{% endblock %}

{% block page %}
  <div id="page_target">
    <div class="create-content tabs">
      <ul class="tabset">
        <li class="active"><a href="#ad">AD</a></li>
        <li><a href="#task">Task</a></li>
        <li><a href="#profile">Profile</a></li>
      </ul>
      <div class="tab-content">
        <div id="ad">
          <div class="create-ad">
            <section class="benefits">
              <ul class="benefits__list">
                <li>
                  <div class="icon">
                    <img src="{{ asset('bundles/iwinapp/img/old/ico12.png') }}" height="30" width="30" alt="">
                  </div>
                  <div class="block">A large base of potential buyers</div>
                </li>
                <li>
                  <div class="icon">
                    <img src="{{ asset('bundles/iwinapp/img/old/ico13.png') }}" height="30" width="30" alt="">
                  </div>
                  <div class="block">Different ways to promote your ad</div>
                </li>
                <li>
                  <div class="icon">
                    <img src="{{ asset('bundles/iwinapp/img/old/ico14.png') }}" height="30" width="30" alt="">
                  </div>
                  <div class="block">Guarantee of service quality</div>
                </li>
              </ul>
              <div class="benefits__descr open-close">
                <div class="slide">
                  <div class="holder">
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequatur, velit.</p>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequatur dignissimos nemo labore porro. Excepturi consectetur sapiente porro, dicta necessitatibus debitis.</p>
                  </div>
                </div>
                <a href="#" class="opener">
                  <span>All benefits you get</span>
                  <span>Collapse</span>
                </a>
              </div>
            </section>

            <section class="main-info">
              <h2 class="heading">Gallery</h2>

              <p style="text-align: center">You can sort images by simply draggin them. - правда работает</p>
              <div class="gallery-container"></div>
            </section>

            <section class="videos">
              <h2 class="heading">Videos</h2>

              <div class="videos-container"></div>
            </section>
          </div>
        </div>
        <div id="task"></div>
        <div id="profile"></div>
      </div>
    </div>
  </div>
{% endblock %}

{% block pageTemplates %}
  {{ parent() }}

  {# @formatter:off #}{% raw %}
  <script type="text/x-twig-template" data-id="iwin-app-images-gallery">
      <ul class="images {{ list.length>0?'':'drop-maximized' }}">
        {% for i, image in list.toArray() %}
          <li class="image" data-ordinal="{{ i }}">
            <img src="{{ image.uri }}" alt="{{ image.hash }}"/>
            <button class="remove">Remove</button>
          </li>
        {% endfor %}
        <li>
          <img class="drop" />
        </li>
      </ul>
  </script>
  <script type="text/x-twig-template" data-id="iwin-app-videos-videos">
      <ul>
        {% for i, video in _context.list.toArray() %}
          <li data-ordinal="{{ i }}">
            <input type="text" value="{{ video.uri }}" name="list[{{ i }}].uri" />
            <button class="remove">Удалить</button>
          </li>
        {% endfor %}
        <li>
          <input type="text" value="" class="new"/>
          <button class="add">Добавить</button>
        </li>
      </ul>
  </script>
  {% endraw %}{# @formatter:on #}
{% endblock %}